<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<% provide(:title, "Start page") %>
<h1>Вопросница</h1>
<table class="questionnaire" >
  <% @questions.each do |question| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even')  %>">
    <td id="column1">
        <h5>Вопрос № <%= question.order %></h5> <h2><%= question.title %></h2>
    </td>
    <td id="column2">
      <table class="answers_table">
        <% question.answers.each do |answer| %>
        <tr>
          <td>
            <div class="btn-group">
              <a class="btn btn-mini btn-primary" href="#"><i class="icon-eye-open icon-white"></i> Ответ №<%= answer.ordering %></a>
              <a class="btn btn-mini btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href=<%= editor_path(question_id: question)%>><i class="icon-pencil"></i> Редактировать</a></li>
                <li><a href="#"><i class="icon-home"></i> Удалить</a></li>
              </ul>
            </div>
            <p><%= answer.title %></p>
          </td>
        </tr>
        <% end %>
      </table>
    </td>
    <td>
        <h3><%= question.enabled %></h3>
    </td>
    <td>
<!--     <a class="btn btn-mini btn-primary" href=<%= new_answer_path(question_id: question)%>><i class="icon-edit"></i></a> -->
      <a class="btn btn-mini btn-primary" href=<%= editor_path(question_id: question)%>><i class="icon-edit icon-white"></i></a>
    </td>
  </tr>
  <% end %>
</table>
