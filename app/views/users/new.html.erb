<% provide(:title, 'Sign up') %>
<h3>Регистрация на сайте</h3>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>

        <br />
        <%= f.submit "Регистрация", class: "btn btn-large btn-primary" %>
    <% end %>
    <p style="text-align: center"><%= link_to "Вход", signin_path %> для зарегистрированных пользователей</p>
  </div>
</div>