<h1>Редактирование вопроса с ответами</h1>
<table class="table-bordered table-hover table-condensed table-striped">
  <% @question.answers.each do |answer| %>
      <tr>
        <td>
          <h3><%= answer.ordering %></h3>
        </td>
        <td>
          <p><%= answer.title  %></p>
        </td>
      </tr>
  <% end %>
</table>
