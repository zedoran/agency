<h3>Редактирование вопроса с ответами</h3>
<!-- <table class="table-bordered table-hover table-condensed table-striped"> -->
<form class="form-horizontal well">
<legend><%= @question.title %></legend>
  <table class="table-bordered table-hover table-condensed table-striped">
    <% @question.answers.each do |answer| %>
        <tr>
          <td>
            <%= render answer %>
          </td>
          <td>
            <% if current_user.admin? %>
                <div class="btn-group">
                  <a class="btn btn-mini btn-primary" href="#"><i class="icon-eye-open icon-white"></i> Ответ №<%= answer.ordering %></a>
                  <a class="btn btn-mini btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <!--  %= link_to "Delete", answer, method: :delete, data: { confirm: "Sure?" } do %> -->
                    <li>
                      <%= link_to answer, method: :delete, data: { confirm: "Уверены, что хотите удалить?" } do %>
                          <i class="icon-trash"></i> Удалить
                      <% end %>
                    </li>
                    <li><a href="#"><i class="icon-refresh"></i> Редактировать</a></li>
                  </ul>
                </div>
            <% end %>

          </td>
        </tr>
    <% end %>
  </table>
  <% if current_user.admin %>
      <br>
        <a class="btn btn-mini btn-primary" href=<%= new_answer_path(question_id: @question)%>><i class="icon-edit icon-white"></i> Добавить вариант ответа</a>
        <br>
        <br>
      <code>&#10531;</code><a href=<%= questionnaire_path%>> Назад к списку вопросов</a>

  <% end %>
</form>
